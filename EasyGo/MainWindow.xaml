<Window x:Class="EasyGo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EasyGo" Height="450" Width="800"
        xmlns:local="clr-namespace:EasyGo">
    
    <DockPanel>
        <Menu DockPanel.Dock="Top" Background="Black" Foreground="White" Padding="10 10 10 10" FontSize="20" >
            <MenuItem Header="Home" Click="HomeMenuItem_Click" Padding="20 0 0 0" HorizontalAlignment="center"/>
            <MenuItem Header="About Us" Click="AboutUsMenuItem_Click" Padding="20 0 0 0"/>
            <MenuItem Header="View Products" Click="ViewProductsMenuItem_Click" Padding="20 0 0 0"/>
            <MenuItem Header="Contact Us" Click="ContactUsMenuItem_Click" Padding="20 0 0 0"/>
            <MenuItem Header="Login" Click="LoginMenuItem_Click" Padding="20 0 0 0"/>
            <MenuItem Header="Sign Up" Click="SignUpMenuItem_Click" Padding="20 0 0 0"/>
        </Menu>
        

        <Frame x:Name="MainContent" NavigationUIVisibility="Hidden" />
    </DockPanel>
</Window>
